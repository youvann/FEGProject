{% extends 'intranet.html.twig' %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="index.php?uc=intranet&action=accueil">Accueil</a></li>
	<li><a href="index.php?uc=formation&action=grille">Liste des formations</a></li>
	<li><a href="index.php?uc=formation&action=consulter&code={{ dossierPdf.codeFormation }}">Fiche formation</a></li>
    <li><a href="index.php?uc=dossierPdf&action=grille&code={{ dossierPdf.codeFormation }}">Liste des dossiers</a></li>
	<li><a href="index.php?uc=documentSpecifique&action=grille&dossierPdf={{ dossierPdf.id }}">Liste des documents à joindre</a></li>
	<li class="active">Modifier un document à joindre</li>
</ol>

<h2 class="titre_rubrique">Modifier un document à joindre</h2>

<form action="index.php?uc=documentSpecifique&action=modification" method="POST">
	<input type="hidden" id="id" name="id" value="{{ documentSpecifique.id }}" />
	<input type="hidden" id="dossier_pdf" name="dossier_pdf" value="{{ documentSpecifique.dossierPdf }}" />
	<div class="form-group">
		<label for="nom">Nom</label>
		<input class="form-control" type="text" id="nom" name="nom" value="{{ documentSpecifique.nom }}" required="required" />
	</div>
	<div class="form-group">
		<label for="url">Adresse URL</label>
		<input class="form-control" type="text" id="url" name="url" value="{{ documentSpecifique.url }}" />
	</div>
    <div class="form-group">
        <label>Requis pour un pré-inscription</label>
        <div class="radio">
            <label for="visible-1">
                {% if documentSpecifique.visible == 1 %}
                    <input type="radio" id="visible-1" name="visible" value="1" checked/> Oui
                {% else %}
                    <input type="radio" id="visible-1" name="visible" value="1"/> Oui
                {% endif %}

            </label>
        </div>
        <div class="radio">
            <label for="visible-0">
                {% if documentSpecifique.visible == 0 %}
                    <input type="radio" id="visible-0" name="visible" value="0" checked /> Non
                {% else %}
                    <input type="radio" id="visible-0" name="visible" value="0" /> Non
                {% endif %}
            </label>
        </div>
    </div>
	<button class="btn btn-primary" type="submit">
		<span class="glyphicon glyphicon-floppy-disk"></span> Enregistrer
	</button>
</form>

<hr />

<a href="index.php?uc=documentSpecifique&action=grille&dossierPdf={{ documentSpecifique.dossierPdf }}"  class="btn btn-primary">
	<span class="glyphicon glyphicon-circle-arrow-left"></span> Précédent
</a>
{% endblock %}

{% block scripts %}

{% endblock %}