{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse"
                                data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="brand" href="index.php?uc=intranet&action=accueil"><img src="./public/img/layout/amu.png" width="100" style="margin-top: 10px;"></a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <!--<li class="{% if get.uc == 'intranet' and get.action == 'accueil' %}active{% endif %}"><a
                                        href="index.php?uc=intranet&action=accueil">Accueil</a></li>-->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="gestion">Gestion
                                    {% if session.name == "administrateur" %}<span class="label label-danger">{% endif %}
                                    {% if session.name == "responsable" %}<span class="label label-info">{% endif %}
                                    {% if session.name == "secrétaire" %}<span class="label label-warning">{% endif %}
                                    {{ session.name }}</span> <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="{% if get.uc == 'intranet' and get.action == 'carte' %}active{% endif %}">
                                        <a
                                                href="index.php?uc=intranet&action=carte">Carte</a></li>
                                    <li class="{% if get.uc == 'intranet' and get.action == 'explorateur' %}active{% endif %}">
                                        <a href="index.php?uc=intranet&action=explorateur">Explorateur</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="formations">Formations <b
                                            class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li class="{% if get.uc == 'formation' and get.action == 'grille' %}active{% endif %}">
                                        <a href="index.php?uc=formation&action=grille">Liste</a></li>
                                    {% if session.grade > 2 %}
                                    <li class="{% if get.uc == 'formation' and get.action == 'ajouter' %}active{% endif %}">
                                        <a href="index.php?uc=formation&action=ajouter">Ajouter</a></li>
                                    {% endif %}
                                    <li class="{% if get.uc == 'intranet' and get.action == 'liensFormation' %}active{% endif %}">
                                        <a href="index.php?uc=intranet&action=liensFormation">Liens</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="documents">Documents généraux à
                                    joindre <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li class="{% if get.uc == 'documentGeneral' and get.action != 'ajouter' %}active{% endif %}">
                                        <a href="index.php?uc=documentGeneral&action=grille">Liste</a></li>
                                    {% if session.grade > 2 %}
                                        <li class="{% if get.uc == 'documentGeneral' and get.action == 'ajouter' %}active{% endif %}">
                                            <a href="index.php?uc=documentGeneral&action=ajouter">Ajouter</a></li>
                                    {% endif %}
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="index.php?uc=utilisateur&action=deconnexion"><span
                                            class="glyphicon glyphicon-log-out"></span> Se déconnecter</a></li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
                <!--/.container-fluid -->
            </div>

            <div id="content" class="col-md-12 well-feg">
                {% block content %}

                {% endblock %}

                <footer>
                    <p class="text-muted text-center" style="margin-top: 2em;">©
                        2014-MIAGE-FEG-PROJECT |
                        Developped by C.G.K.M.</p>
                </footer>

            </div>
        </div>
        <div style="margin-bottom: 2em;"></div>

    </div><!-- container -->

{% endblock %}
