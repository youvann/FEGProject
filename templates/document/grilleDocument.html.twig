{% extends 'intranet.html.twig' %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="index.php?uc=intranet&action=accueil">Accueil</a></li>
	<li class="active">Liste des documents</li>
</ol>

<h2 class="titre_rubrique">Liste des documents</h2>

<a href="index.php?uc=document&action=ajouter" class="btn btn-lg btn-primary">
	<span class="glyphicon glyphicon-plus-sign"></span> Ajouter un document
</a>

{% if documents is not empty %}
<hr />
<table class="table table-hover table-bordered table-striped">
	<tr>
		<th>Nom</th>
        <th>Multiple</th>
		<th>Options</th>
	</tr>
        {% for document in documents %}
	<tr>
		<td>{{ document.nom }}</td>
        <td>
            {% if(document.multiple == 0) %}
                Oui
            {% else %}
                Non
            {% endif %}
        </td>
		<td>
			<div class="btn-group">
				<a href="index.php?uc=document&action=modifier&id={{ document.id }}" type="button" class="btn btn-warning">
					<span class="glyphicon glyphicon-edit"></span> Modifier
				</a>
				<a href="index.php?uc=document&action=suppression&id={{ document.id }}" type="button" class="btn btn-danger">
					<span class="glyphicon glyphicon-trash"></span> Supprimer
				</a>
			</div>
		</td>
	</tr>
        {% endfor %}
</table>
{% endif %}

<hr/>

<a href="index.php?uc=intranet&action=accueil"  class="btn btn-primary">
	<span class="glyphicon glyphicon-circle-arrow-left"></span> Précédent
</a>

{% endblock %}