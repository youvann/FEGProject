{% extends 'intranet.html.twig' %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="index.php?uc=intranet&action=accueil">Accueil</a></li>
	<li class="active">Liste des documents</li>
</ol>

<h2 class="titre_rubrique">Modifier un document</h2>

<form action="index.php?uc=document&action=modification" method="POST">
	<input type="hidden" id="id" name="id" value="{{ document.id }}" />
	<div class="form-group">
		<label for="nom">Nom</label>
		<input class="form-control" type="text" id="nom" name="nom" value="{{ document.nom }}" />
	</div>
    <div class="form-group">
        <label for="multiple">Multiple</label>
        <input class="form-control" type="text" id="multiple" name="multiple" value="{{ document.multiple }}" />
    </div>
	<button class="btn btn-primary" type="submit">
		<span class="glyphicon glyphicon-floppy-disk"></span> Enregistrer
	</button>
</form>

{% endblock %}

{% block scripts %}

{% endblock %}