<div id="blockCursus-{{ indice }}">
    <div class="well well-lg">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="anneeCursus-{{ indice }}">Années </label> /
                    <span class="en">Years</span>
                    <select class="form-control required"
                            id="anneeCursus-{{ indice }}"
                            name="anneeCursus[]">
                        % set ecart = anneeBasse - 60 %}
                        {% for i in ecart..anneeBasse %}
                            <option {% if i == "now" | date('Y') %}selected="selected"
                                    {% endif %}value="{{ i - 1 }}-{{ i }}">{{ i - 1 }}-{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="col-md-8">
                <div class="form-group">
                    <label for="etablissement-{{ indice }}">Etablissement</label> / <span
                            class="en">Establishment</span>
                    <span class="label label-danger">Requis</span>
                    <input type="text" class="form-control required"
                           id="etablissement-{{ indice }}"
                           name="etablissement[]" data-validation="required"
                           data-validation-error-msg="Veuillez remplir le champ Etablissement pour la formation antérieur"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="valide-{{ indice }}">Note (résultat)</label> /
                    <span class="en">Mark</span>
                    <input type="text" class="form-control" id="valide-{{ indice }}"
                           name="valide[]"/>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="cursus-{{ indice }}">Cursus suivi</label> / <span
                            class="en">Followed formation</span>
                    <span class="label label-danger">Requis</span>
                    <input type="text" class="form-control required"
                           id="cursus-{{ indice }}" name="cursus[]"
                           data-validation="required"
                           data-validation-error-msg="Veuillez remplir le champ Cursus suivi dans la formation antérieur"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="radioValide-{{ indice }}"
                               id="nonValide-{{ indice }}" value="0" checked>
                        Je n'ai pas validé mon année
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="radioValide-{{ indice }}"
                               id="valide-{{ indice }}" value="1">
                        J'ai validé mon année
                    </label>
                </div>
            </div>
        </div>
    </div>

</div>
