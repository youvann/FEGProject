<div class="panel panel-primary">
    <div class="panel-heading">Coordonnées & contact <span class="en_cadre"> / Address & contact</span>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="adresses">Adresse</label> /
                    <span class="en">Adresse</span>
                    <span class="label label-danger">Requis</span>
                    <input type="text" class="form-control required" id="adresse"
                           name="adresse"
                           placeholder="Votre adresse" data-validation="required"
                           data-validation-error-msg="Veuillez remplir le champ adresse"/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="complement">Complément d'adresse</label> /
                    <span class="en">Complement</span>
                    <input type="text" class="form-control" id="complement"
                           name="complement"
                           data-validation-optional="true"
                           data-validation="custom"
                           data-validation-regexp="^([a-zA-Z-\'\séêèëààâäôœöûüùîïç]+)$"
                           placeholder="Bâtiment, étage, appartement ..."/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="code_postal">Code postal</label> / <span class="en">Zip code</span>
                    <span class="label label-danger">Requis</span>
                    <input type="text" class="form-control required" id="code_postal"
                           name="code_postal"
                           placeholder="Votre code postal" data-validation="custom"
                           data-validation-regexp="(^[0-9]{5}$)"
                           data-validation-error-msg="Veuillez entrer un code postal valide"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="ville">Ville</label> / <span class="en">City</span>
                    <span class="label label-danger">Requis</span>
                    <input type="text" class="form-control required" id="ville"
                           name="ville"
                           placeholder="Votre ville"
                           data-validation="custom"
                           data-validation-regexp="^([a-zA-Z-\'\séêèëààâäôœöûüùîïç]+)$"
                           data-validation-error-msg="Veuillez remplir le champ ville"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="fixe">Téléphone fixe</label> / <span class="en">Phone number</span>
                    <input type="tel" class="form-control" id="fixe" name="fixe"
                           placeholder="Votre numéro" data-validation-optional="true"
                           data-validation="custom"
                           data-validation-regexp="^(0[1-68])(?:[ _.-]?(\d{2})){4}$"
                           data-validation-error-msg="Veuillez fournir un n° de tel. valide"/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="portable">Téléphone mobile</label> / <span
                            class="en">Mobile number</span>
                    <input type="tel" class="form-control" id="portable"
                           name="portable"
                           placeholder="Votre numéro" data-validation-optional="true"
                           data-validation="custom"
                           data-validation-regexp="^(0[1-68])(?:[ _.-]?(\d{2})){4}$"
                           data-validation-error-msg="Veuillez fournir un n° de tel. valide"/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="mail">Courriel</label> / <span
                            class="en">E-mail</span>
                    <span class="label label-danger">Requis</span>
                    <input type="email" class="form-control required" id="mail"
                           name="mail" placeholder="Votre mail"
                           data-validation="email"
                           data-validation-error-msg="Veuillez entrer un email valide"/>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">Baccalauréat ou équivalent <span class="en_cadre"> / High school diploma</span>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="serie_bac">Série</label> / <span
                            class="en">Type</span>
                    <span class="label label-danger">Requis</span>
                    <input type="text" class="form-control required" id="serie_bac"
                           name="serie_bac"
                           placeholder="Votre série" data-validation="custom"
                           data-validation-regexp="^([a-zA-Z-\'\séêèëààâäôœöûüùîïç]+)$"
                           data-validation-error-msg="Veuillez remplir le champ série"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="etablissement_bac">Etablissement</label> / <span
                            class="en">Establishment</span>
                    <span class="label label-danger">Requis</span>
                    <input type="text" class="form-control required"
                           id="etablissement_bac" name="etablissement_bac"
                           placeholder="Votre établissement"
                           data-validation="custom"
                           data-validation-regexp="^([a-zA-Z-\'\séêèëààâäôœöûüùîïç]+)$"
                           data-validation-error-msg="Veuillez indiquer le nom de l'établissement où vous avez eu votre baccalauréat"/>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="departement_bac">Département</label> / <span
                            class="en">Department</span>
                    <span class="label label-danger">Requis</span>
                    <select class="form-control" id="departement_bac"
                            name="departement_bac"
                            placeholder="Votre département"
                            data-validation-error-msg="Veuillez sélectionner un département">
                        <option value="Autre">Autre</option>
                        {% for num,departement in departements %}
                            <option value="{{ departement }}">{{ departement }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="pays_bac">Pays</label> / <span
                            class="en">Country</span>
                    <span class="label label-danger">Requis</span>
                    <select class="form-control" id="pays_bac"
                            name="pays_bac"
                            placeholder="Votre pays"
                            data-validation-error-msg="Veuillez sélectionner un pays">
                        {% for num,unPaysUe in paysUe %}
                            <option {% if num == 'FR' %}selected="selected"{% endif %}
                                    value="{{ num }}">{{ unPaysUe }} ({{ num }})
                            </option>
                        {% endfor %}
                    </select>

                </div>
            </div>
            <div class="col-md-4" id="datePickerYearBac">
                <label for="annee_bac">Année d'obtention</label> / <span
                        class="en">Year</span>
                <span class="label label-danger">Requis</span>

                <div class="input-group date">
                    <input type="text" class="form-control" id="annee_bac"
                           name="annee_bac"
                           data-validation="required"
                           value="{{ "now" | date("Y") }}"/>
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-th"></i>
                    </span>
                </div>
                <!--<div class="form-group">
                    <label for="annee_bac">Année d'obtention du bac</label> <span
                            class="en">Year</span>
                    <span class="label label-danger">Requis</span>
                    <select class="form-control"
                            id="annee_bac"
                            name="annee_bac">
                        {% set ecart = anneeBasse - 60 %}
                        {% for i in ecart..anneeBasse %}
                            <option {% if i == "now" | date('Y') %}selected="selected" {% endif %}
                                    value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>-->
            </div>
        </div>
    </div>
</div>
