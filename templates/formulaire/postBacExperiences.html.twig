<fieldset>
	<legend>Cursus antérieur</legend>

	<h4>1. Cursus post-bac</h4>
	<div class="form-group">
        {% for i in 1..5 %}
		<div class="row">
			<div class="col-md-2">
				<label for="anneeDebutCursus-{{ i }}">Année de début</label>
				<input type="text" class="form-control" id="anneeDebutCursus-{{ i }}" name="anneeDebutCursus-{{ i }}" />
			</div>
			<div class="col-md-2">
				<label for="anneeFinCursus-{{ i }}">Année de fin</label>
				<input type="text" class="form-control" id="anneeFinCursus-{{ i }}" name="anneeFinCursus-{{ i }}" />
			</div>
			<div class="col-md-3">
				<label for="etablissement-{{ i }}">Etablissement</label>
				<input type="text" class="form-control" id="etablissement-{{ i }}" name="etablissement-{{ i }}" />
			</div>
			<div class="col-md-3">
				<label for="cursus-{{ i }}">Cursus suivi</label>
				<input type="text" class="form-control" id="cursus-{{ i }}" name="cursus-{{ i }}" />
			</div>
			<div class="col-md-2">
				<label for="valide-{{ i }}">Note/Mention</label>
				<input type="text" class="form-control" id="valide-{{ i }}" name="valide-{{ i }}" />
			</div>
		</div>
		<hr />
        {% endfor %}
	</div>
</fieldset>

<fieldset>
	<h4>2. Expérience professionnelle (emplois, stages)</h4>
	<div class="form-group">
                                {% for i in 1..3 %}
		<div class="row">
			<div class="col-md-3">
				<label for="moisDebut-{{ i }}">Mois de début</label>
				<input type="text" class="form-control" id="moisDebut-{{ i }}" name="moisDebut-{{ i }}" />
			</div>
			<div class="col-md-3">
				<label for="anneeDebut-{{ i }}">Année de début</label>
				<input type="text" class="form-control" id="anneeDebut-{{ i }}" name="anneeDebut-{{ i }}" />
			</div>
			<div class="col-md-3">
				<label for="moisFin-{{ i }}">Mois de fin</label>
				<input type="text" class="form-control" id="moisFin-{{ i }}" name="moisFin-{{ i }}" />
			</div>
			<div class="col-md-3">
				<label for="anneeFin-{{ i }}">Année de fin</label>
				<input type="text" class="form-control" id="anneeFin-{{ i }}" name="anneeFin-{{ i }}" />
			</div>
			<div class="col-md-6">
				<label for="entreprise{{ i }}">Entreprise</label>
				<input type="text" class="form-control" id="entreprise-{{ i }}" name="entreprise-{{ i }}" />
			</div>
			<div class="col-md-6">
				<label for="emploi{{ i }}">Fonction</label>
				<input type="text" class="form-control" id="fonction-{{ i }}" name="fonction-{{ i }}" />
			</div>
		</div>
		<hr />
                                {% endfor %}
	</div>
</fieldset>
