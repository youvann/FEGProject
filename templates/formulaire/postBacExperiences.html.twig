{% set mois = ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"] %}
<div class="panel panel-primary">
    <div class="panel-heading">Formation antérieure / <span class="en_cadre">Previous formation</span>
    </div>
    <div class="panel-body">
        <p>Veuillez détailler votre parcours post-bac.</p>

        <div class="row">
            <div class="col-md-12">
                <div class="btn-group">
                    <button type="button" id="addCursus"
                            class="btn btn-primary btn-sm">
                        <span class="glyphicon glyphicon-plus-sign"></span> Ajouter
                    </button>
                    <button type="button" id="removeCursus"
                            class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-minus-sign"></span> Retirer
                    </button>
                </div>
            </div>
        </div>
        <br/>

        <div id="blockCursus-1">
            <div class="well well-lg">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="anneeCursus[]">Années</label> /
                            <span class="en">Years</span>
                            <span class="label label-danger">Requis</span>
                            <select class="form-control"
                                    id="anneeCursus[]"
                                    name="anneeCursus[]">
                                {% set ecart = anneeBasse - 60 %}
                                {% for i in ecart..anneeBasse %}
                                    <option {% if i == "now" | date('Y') %}selected="selected" {% endif %}value="{{ i - 1 }}-{{ i }}">{{ i - 1 }}-{{ i }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <!--<div class="col-md-2">
                        <div class="form-group">
                            <label for="anneeFinCursus[]">Année de fin</label>
                            <select class="form-control"
                                    id="anneeFinCursus[]"
                                    name="anneeFinCursus[]">
                                {% set ecart = anneeBasse - 60 %}
                                {% for i in ecart..anneeBasse %}
                                    <option {% if i == "now" | date('Y') %}selected="selected" {% endif %} value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>-->
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="etablissement[]">Etablissement</label> /
                            <span class="en">Establishment</span>
                            <span class="label label-danger">Requis</span>
                            <input type="text" class="form-control required"
                                   id="etablissement[]"
                                   name="etablissement[]"
                                   data-validation="required"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="valide[]">Note (résultat)
                            </label> /
                            <span class="en">Mark</span>
                            <input type="text" class="form-control" id="valide[]"
                                   name="valide[]"/>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="cursus[]">Cursus suivi</label> / <span
                                    class="en">Followed formation</span>
                            <span class="label label-danger">Requis</span>
                            <input type="text" class="form-control required"
                                   id="cursus[]" name="cursus[]"
                                   data-validation="required"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">Expériences professionnelles (emplois, stages)
    / <span class="en_cadre">Professional experience</span></div>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-12">
                <div class="btn-group">
                    <button type="button" id="addExperience"
                            class="btn btn-primary btn-sm">
                        <span class="glyphicon glyphicon-plus-sign"></span>
                        Ajouter
                    </button>
                    <button type="button" id="removeExperience"
                            class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-minus-sign"></span>
                        Retirer
                    </button>
                </div>
            </div>
        </div>
        <br/>
        <div id="blockExperience-1">
            <div class="well">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="moisDebut-1">Mois de début</label>
                            <select class="form-control" id="moisDebut[]"
                                    name="moisDebut[]">
                                {% for unMois in mois %}
                                    <option value="{% if loop.index < 10 %}0{% endif %}{{ loop.index }}">{{ unMois }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="anneeDebut[]">Année de début</label>
                            <select class="form-control" id="anneeDebut[]"
                                    name="anneeDebut[]">
                                {% set ecart = anneeBasse - 60 %}
                                {% for i in ecart..anneeBasse %}
                                    <option {% if i == "now" | date('Y') %}selected="selected" {% endif %} value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="moisFin[]">Mois de fin</label>
                            <select class="form-control" id="moisFin[]"
                                    name="moisFin[]">
                                {% for unMois in mois %}
                                    <option value="{% if loop.index < 10 %}0{% endif %}{{ loop.index }}">{{ unMois }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="anneeFin[]">Année de fin</label>
                            <select class="form-control" id="anneeFin[]"
                                    name="anneeFin[]">
                                {% set ecart = anneeBasse - 60 %}
                                {% for i in ecart..anneeBasse %}
                                    <option {% if i == "now" | date('Y') %}selected="selected" {% endif %} value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="entreprise[]">Entreprise</label>
                            <input type="text" class="form-control" id="entreprise[]"
                                   name="entreprise[]"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="emploi[]">Fonction</label>
                            <input type="text" class="form-control" id="fonction[]"
                                   name="fonction[]"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
