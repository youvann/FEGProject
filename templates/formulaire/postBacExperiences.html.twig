{% extends 'layout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Parcours post-bac</h3>
                    <br/>
                    <div class="progress progress-striped active">
                        <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 64%">
                            <span class="sr-only">64% Complete</span>
                        </div>
                    </div>
                </div><!-- /panel-heading -->

                <div class="panel-body">
                    <form role="form" id="formPostBacExperiences" action="index.php?uc=formulaire&action=traiterPostBacExperiences" id="formPostBac" method="post">
                        <fieldset>
                            <legend>Cursus antérieur</legend>
                            {#<h4>1. Dernière inscription dans l'enseignement supérieur</h4>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-10">
                                        <label for="">Année universitaire</label>
                                        <input type="text" class="form-control" id="anne{{ i }}" name="anne{{ i }}" placeholder="Ex : 2013/2014 " />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-10">
                                        <label for="">Formation suivie</label>
                                        <input type="text" class="form-control" id="anne{{ i }}" name="anne{{ i }}" placeholder="Ex : 2013/2014 " />
                                    </div>
                                </div>

                            </div>#}

                            <h4>1. Cursus post-bac</h4>
                            <div class="form-group">
                                {% for i in 1..5 %}
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label for="anneeDebut-{{ i }}">Année de début</label>
                                            <input type="text" class="form-control" id="anneeDebut-{{ i }}" name="anneeDebut-{{ i }}" />
                                        </div>
										<div class="col-md-2">
                                            <label for="anneeFin-{{ i }}">Année de fin</label>
                                            <input type="text" class="form-control" id="anneeFin-{{ i }}" name="anneeFin-{{ i }}" />
                                        </div>
                                        <div class="col-md-3">
                                            <label for="etablissement-{{ i }}">Etablissement</label>
                                            <input type="text" class="form-control" id="etablissement-{{ i }}" name="etablissement-{{ i }}" />
                                        </div>
                                        <div class="col-md-3">
                                            <label for="cursus-{{ i }}">Cursus suivi</label>
                                            <input type="text" class="form-control" id="cursus-{{ i }}" name="cursus-{{ i }}" />
                                        </div>
                                        <div class="col-md-2">
                                            <label for="valide-{{ i }}">Note/Mention</label>
                                            <input type="text" class="form-control" id="valide-{{ i }}" name="valide-{{ i }}" />
                                        </div>
                                    </div>
								<hr />
                                {% endfor %}
                            </div>
                        </fieldset>

                        <fieldset>
                            <h4>2. Expérience professionnelle (emplois, stages)</h4>
                            <div class="form-group">
                                {% for i in 1..3 %}
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="moisDebut-{{ i }}">Mois de début</label>
                                            <input type="text" class="form-control" id="moisDebut-{{ i }}" name="moisDebut-{{ i }}" />
                                        </div>
										<div class="col-md-3">
                                            <label for="anneeDebut-{{ i }}">Année de début</label>
                                            <input type="text" class="form-control" id="anneeDebut-{{ i }}" name="anneeDebut-{{ i }}" />
                                        </div>
										<div class="col-md-3">
                                            <label for="moisFin-{{ i }}">Mois de fin</label>
                                            <input type="text" class="form-control" id="moisFin-{{ i }}" name="moisFin-{{ i }}" />
                                        </div>
										<div class="col-md-3">
                                            <label for="anneeFin-{{ i }}">Année de fin</label>
                                            <input type="text" class="form-control" id="anneeFin-{{ i }}" name="anneeFin-{{ i }}" />
                                        </div>
                                        <div class="col-md-6">
                                            <label for="entreprise{{ i }}">Entreprise</label>
                                            <input type="text" class="form-control" id="entreprise-{{ i }}" name="entreprise-{{ i }}" />
                                        </div>
                                        <div class="col-md-6">
                                            <label for="emploi{{ i }}">Fonction</label>
                                            <input type="text" class="form-control" id="fonction-{{ i }}" name="fonction-{{ i }}" />
                                        </div>
                                    </div>
								<hr />
                                {% endfor %}
                            </div>
                        </fieldset>

                        <input type="submit" class="btn btn-primary">
                    </form>
                </div> <!-- panel-body -->
            </div><!-- panel panel-primary -->
        </div>
    </div>
{% endblock %}