{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Information spécifiques demandées par la formation</h3>
                    <br/>
                    <div class="progress progress-striped active">
                        <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 48%">
                            <span class="sr-only">48% Complete</span>
                        </div>
                    </div>
                </div><!-- /panel-heading -->

                <div class="panel-body">
                    <form role="form" action="index.php?uc=formulaire&action=traiterInformationsSpecifiques" id="formInformationsSpecifiques" method="post">

                        <fieldset>
                            <legend>Informations spécifiques</legend>

                            {{ form|raw }}
                        </fieldset>
                    </form>
                </div> <!-- panel-body -->
            </div><!-- panel panel-primary -->
        </div>
    </div>

{% endblock %}